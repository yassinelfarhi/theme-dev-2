{ "@context": "https://schema.org", 
 "@type": "BlogPosting",
 "headline": "{{ aticle.title }}",
 "image": "{{ article.image }}",
 "editor": "{{ aticle.author }}", 
 "genre": "search engine optimization", 
 "keywords": {% for tag in article.tags %} " {{ tag }}" {% endfor %}, 
 "publisher": "{{ article.author }}",
